# PrivAI Backend Configuration

# Application
APP_NAME=PrivAI
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Vector Database
FAISS_INDEX_PATH=data/faiss_index
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# AI/LLM
LOCAL_LLM_MODEL=microsoft/DialoGPT-medium
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Database
DATABASE_URL=sqlite:///./privai.db

# Logging
LOG_LEVEL=INFO
